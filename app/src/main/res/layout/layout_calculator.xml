<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:stretchColumns="*"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_ketqua"
            android:layout_width="88dp"
            android:gravity="right"
            android:background="@color/teal_200"
            android:text="0"
            android:textSize="35sp" />
        <TableRow>
            <Button
                android:id="@+id/btn_cong"
                android:layout_gravity="center"
                android:text="+"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_tru"
                android:layout_gravity="center"
                android:text="-"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_nhan"
                android:layout_gravity="center"
                android:text="*"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_chia"
                android:layout_gravity="center"
                android:text="/"
                android:textSize="24sp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_1"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_2"
                android:layout_gravity="center"
                android:text="2"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_3"
                android:layout_gravity="center"
                android:text="3"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_4"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="24sp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_5"
                android:layout_gravity="center"
                android:text="5"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_6"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_7"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_8"
                android:layout_gravity="center"
                android:text="8"
                android:textSize="24sp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_9"
                android:layout_gravity="center"
                android:text="9"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_0"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_bang"
                android:layout_gravity="center"
                android:text="="
                android:textSize="24sp"
                />
            <Button
                android:id="@+id/btn_ac"
                android:layout_gravity="center"
                android:text="AC"
                android:textSize="24sp"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>